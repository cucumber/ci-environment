{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "lib": [
      "es2019",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "module": "esNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noEmit": true
  }
}
